{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src", "astro.config.*", "env.d.ts", "types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    ".stackbit/**",
    "src/.stackbit/**",
    "stackbit.config.ts",
    "src/content/**"
  ]
}
